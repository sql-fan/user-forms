<%= form_with model: @user do |form| %>
  <% if @user.errors.any? %>
    <div id="errors_explanation">
      <h2>You have <%= pluralize @user.errors.count, "error" %> in the form.</h2>
      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="">
    <%= form.label :username %>
    <%= form.text_field :username, placeholder: "Your username here" %>
  </div>
  <div class="">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: "example@example.com"%>
  </div>
  <div class="">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <%= form.submit %>
<% end %>
